<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>






<!-- TREEHOUSE RECIPE BOX -->

<%- include('../partials/messages') -%>

<div class="container" style="margin-top: 1em">
	<nav class="grid-container bredcrumb">
		<a class="btn btn-warning" href="/recipes"> ‚Üê Back to recipes</a>
	</nav>
	<hr>
	<div class="grid-container">
		<h1><%= recipe.recipeName %></h1>
		<h6>Author: <%= recipe.author %></h6>
		<img class="img-recipe" src="<%=recipe.imageName%>">
		<hr>
		<% if (recipe.allergens.length !== 0) { %>
			<h5>Allergens</h5>
			<ul>
				<% for (var i = 0; i < recipe.allergens.length; i++) { %>
				<li style="display: inline-block"><%= recipe.allergens[i]  %></li>
				<% } %>
			</ul>
		<% } else { %> 
			<h5>This Recipe has no Allergens</h5>
		<% } %>
	
		<hr>
		
		<h5>Ingredients</h5>
		<ul>
			<% for (var i = 0; i < recipe.ingredients.length; i++) { %>
			<li style="list-style: none"><b><%= recipe.amount[i] %></b> - <b><%= recipe.ingredients[i] %></b></li>
			<% } %>
		</ul>
	
		<div class="showSteps">
			<h5>Steps</h5>
			<br>
			<ol>
				<% for (var i = 0; i < recipe.stepName.length; i++) { %>
				<li class="liStep"><b><%= recipe.stepNameTitle[i] %></b></li>
				<li style="text-indent: 1.9em"><%= recipe.stepName[i] %></li><br>
				<% } %>
			</ol>	
		</div>
	
			<div class="grid-x grid-margin-x">
				<div class="cell small-1">
					<% if (recipe.author === user.name) { %>
						<a class="btn btn-warning" href="/recipes/<%= recipe.id %>/edit">Edit</a>
						<% } else { %>
						<% } %>
				</div>
				<div class="cell auto">
					<%- include('../partials/deleteForm', { url: `/recipes/${recipe._id}` }) -%>
				</div>	
			  </div>
	</div>

</div>

	<%- include('../partials/footer') -%>

