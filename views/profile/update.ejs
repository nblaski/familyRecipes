
<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<%- include ('../partials/messages') -%>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user"></i>  <%=username.name %>'s profile<br><br>
            <img id="preview" style="width: 200px;" src="<%=username.profileImgURL%>">
      </h1>
       
          <form class="" action="/profile/<%=username.id%>/update" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                    <p>Update Profile Icon</p>
                    <input class="form-control" type="file" id="file" name="file">   
              </div>
                <div class="form-group">
                    <label>Account Email</label>
                    <input class="form-control" type="text" name="email" value="<%=username.email%>" readonly><br>
                </div>
                <div class="form-group">
                    <label>Update Account Name</label>
                    <input class="form-control" type="text" name="name" value="<%=username.name%>"><br><br>
                </div>
                <div>
                  <a class="btn btn-warning" href="/profile/<%=user.id%>">Back</a>
                  <button type="submit" class="btn btn-success" style="display: inline-block;">
                    Submit Profile Changes
                </button>
                </div>

      </form>
       
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>




